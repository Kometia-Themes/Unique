{% extends 'layout.twig' %}

{% block body %}
<div class="container margin-top">
  <div class="row">
    <div class="col-sm-12 section__title section-title--margin">
      <h1 class="section-heading">Restablecer contraseña</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      {% form 'customer_reset_password' 'role="form"' %}
        <div class="form-group">
          <input type="password" class="form-control input-lg" id="password" name="password" placeholder="Nueva Contraseña" required>
        </div>
        <div class="form-group">
          <input type="password" class="form-control input-lg" id="password_confirmation" name="password_confirmation" placeholder="Confirmar Contraseña" required>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-lg btn-action">Restablecer</button>
        </div>
        <input type="hidden" name="token" value="{{ token }}">
        <input type="hidden" name="email" value="{{ email }}">
      {% endform %}
    </div>
  </div>
</div>
{% endblock body %}
