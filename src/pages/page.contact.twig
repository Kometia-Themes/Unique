{% extends 'layout.twig' %}

{% block body %}
<div class="container margin-top">
  <div class="row">
    <div class="col-sm-12 section__title">
      <h1 class="section-heading">{{ page.title }}</h1>
    </div>
    <div class="col-xs-12 text-center margin-bottom">
      {{ page.content }}
    </div>
  </div>
  <div class="row">
  {% form 'contact' 'role="form" class="contact-form"' %}
    <div class="col-sm-12 col-md-6">
      <div class="form-group">
        <label for="name" class="contact-form__label">Nombre</label>
        <input type="text" class="form-control contact-form__input" name="message[content][nombre]" id="name">
      </div>
      <div class="form-group">
        <label for="email" class="contact-form__label">Email</label>
        <input type="email" class="form-control contact-form__input" name="message[email]" id="email">
      </div>
      <div class="form-group">
        <label for="phone" class="contact-form__label">Tel√©fono</label>
        <input type="text" class="form-control contact-form__input" name="message[content][telefono]" id="phone">
      </div>
    </div>
    <div class="col-sm-12 col-md-6">
      <div class="form-group">
        <label for="message" class="contact-form__label">Mensaje</label>
        <textarea class="form-control contact-form__input contact-form--message" rows="6"  name="message[content][mensaje]" id="message"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-lg btn-action contact-form__button">Enviar</button>
      </div>
    </div>
  {% endform %}
  </div>
</div>
{% endblock %}
